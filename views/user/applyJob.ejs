<%-include("../includes/BoilerHeader.ejs")%>



<div class="row  mt-3">
<h1  class="col-6 offset-3">  Apply Your Dream Job Here !</h1>
    <div class="col-6 offset-3">
<form action="/user/applyjob  " method="POST" class="needs-validation" novalidate>

    <div class="mb-3" >
        <label for="username" class="form-label">Username</label>
        <input 
        name="username"
          type="text"  
           class="form-control" 
           required
           id="username"
         />

        <div class="valid-feedback"   > looks good</div>
      </div>
      <div class="mb-3" >
        <label for="email" class="form-label">Email</label>
        <input 
        name="email"
          type="email"  
           class="form-control" 
           required
           id="email"
         />
      </div>
      
    <div class="mb-3" >
        <label for="qualification" class="form-label">Qualification</label>
        <input 
        name="qualification"
          type="text"  
           class="form-control" 
           required
           id="qualification"
         />

        <div class="valid-feedback"   > looks good</div>
      </div>
      <div class="mb-3" >
        <label for="skills" class="form-label">Skills</label>
        <input 
        name="skills"
          type="text"  
           class="form-control" 
           required
           id="skills"
         />

        <div class="valid-feedback"   > looks good</div>
      </div>
     
<button  class=" btn buttons rounded-pill px-5"> Apply Now</button>
</form>

    </div>
</div>


